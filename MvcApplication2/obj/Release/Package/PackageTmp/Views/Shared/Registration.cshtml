@{
    string controller = (string)ViewContext.RouteData.Values["controller"];

    using (Html.BeginForm("Register", controller, FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", role = "form", name = "registration-form" }))
    {
    <div class="form-group">
        <div class="col-sm-2">
            <input name="login" type="text" class="form-control input-sm" placeholder="Логин" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-2">
            <input name="password" type="password" class="form-control input-sm" placeholder="Пароль" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-2">
            <input name="password2" type="password" class="form-control input-sm" placeholder="Повторите пароль" />
        </div>
    </div>
        <div class="form-group">
            <div class="col-sm-2">
                <input name="email" type="text" class="form-control input-sm" placeholder="Email" />
            </div>
        </div>
    <div class="form-group">
        <input type="submit" value="Зарегестрироваться" class="btn btn-link" />
    </div>
    if (Session["REGISTRATION_ERROR_MSG"] != null)
    {
        <p>@Session["REGISTRATION_ERROR_MSG"]</p>
        Session["REGISTRATION_ERROR_MSG"] = null;
    }
     
    }
}
