@model List<GasOil.db.ProductsGroup>
@{
    ViewBag.Title = "Редактирование категорий";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@ViewBag.Error
<table class="table center" style="background-color: white; width: 50%">
    <tr>
        <td colspan="2">
            @Html.ActionLink("Добавить", "AddCategory", "Products", new { groupId = -1 }, new { @class = "btn btn-default", role = "button" })
        </td>
    </tr>
    <tr>
        <th>
            Категория
        </th>
        <th>
            Действия
        </th>
    </tr>
    @foreach (var group in Model)
    {
        <tr>
            <td>@group.Name
            </td>
            <td>@Html.ActionLink("Удалить", "DeleteCategory", "Products", new { groupId = group.id }, new { @class = "btn btn-default", role = "button" })
                @Html.ActionLink("Изменить", "EditCategorу", "Products", new { groupId = group.id }, new { @class = "btn btn-default", role = "button" })
            </td>
        </tr>
    }
</table>
