@{
    ViewBag.Title = "Добавление категории";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("AddCategory", "Products", new { groupId = ViewBag.groupId }))
{
    <table class="table center" style="background-color: white; width: 40%;">
        <tr>
            <td>Название категории</td><td><input type="text" name="groupName" class="form-control"/></td>
        </tr>
        <tr>
            <td colspan="2" align="center">
            <input type="submit" value="Добавить" class="btn btn-primary"/>    
            </td>
        </tr>
    </table>
}
