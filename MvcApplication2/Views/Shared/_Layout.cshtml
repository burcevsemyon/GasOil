<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@Html.Raw(string.Format("{0} - ООО \"ОПТИМУМ ИНТЕР ПАРЕС\"", string.IsNullOrEmpty(ViewBag.Title) ? "" : ViewBag.Title))</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    
    @Styles.Render("~/Content/bootstrap/css", "~/Content/css")
    @RenderSection("css", false)

    @Scripts.Render("~/bundles/jquery", "~/bundles/bootstrap")
    @RenderSection("scripts", false)

</head>
    <body>
        @Html.Partial("_MenuPartial")
        @RenderBody()
        <div class="navbar navbar-inverse navbar-fixed-bottom" role="navigation">
            <div class="container-fluid" style="text-align: center;">
                @Html.Raw(string.Format("{0} &copy; {1}", "ООО \"ОПТИМУМ ИНТЕР ПАРЕС\"", DateTime.Now.Year))
            </div>
        </div>
    </body>
</html>
